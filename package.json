{
  "name": "order-search-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:full": "./scripts/dev.sh",
    "db:start": "docker-compose up -d sqlserver",
    "db:stop": "docker-compose stop sqlserver",
    "db:restore": "./scripts/restore-db.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "build": "next build --turbopack",
    "build:clean": "npm run clean && npm run build",
    "build:windows": "npm run clean:windows && npm run build",
    "build:production": "npx prisma generate && next build",
    "build:vercel": "npx prisma generate && next build",
    "build:production:clean": "npm run clean && npm run build:production",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "clean:windows": "if exist .next rmdir /s /q .next && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache",
    "start": "node scripts/start.js",
    "start:windows": "scripts\\start.bat",
    "start:bash": "./scripts/start.sh",
    "lint": "eslint",
    "deploy:start": "pm2 start ecosystem.config.js",
    "deploy:stop": "pm2 stop recepcionactiva",
    "deploy:restart": "pm2 restart recepcionactiva",
    "deploy:status": "pm2 status",
    "deploy:logs": "pm2 logs recepcionactiva",
    "deploy:monit": "pm2 monit",
    "encrypt-password": "node scripts/encrypt-password.js",
    "ftp:setup": "./scripts/setup-local-ftp.sh",
    "ftp:test": "node scripts/test-ftp-simple.js",
    "ftp:start": "docker-compose up -d ftp-server ftp-http-server",
    "ftp:stop": "docker-compose stop ftp-server ftp-http-server",
    "ftp:logs": "docker-compose logs -f ftp-server",
    "ftp:status": "docker-compose ps ftp-server ftp-http-server",
    "create-user": "node scripts/create-user.js",
    "validate-env": "node scripts/validate-env.js",
    "validate-env:template": "node scripts/validate-env.js --template",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/adapter-mssql": "^6.16.2",
    "@prisma/client": "^6.16.1",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "basic-ftp": "^5.0.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^3.0.4",
    "mssql": "^11.0.1",
    "next": "^16.0.10",
    "prisma": "^6.16.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.69.0",
    "tailwindcss": "^4",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^16.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
